	String sHTMLTemplate = "<table border=0 width='100%' >";
	sHTMLTemplate += "<tr><td> ${DOCK:default} </td></tr>";
	sHTMLTemplate += "</table>";
	
	//将模版应用于Datawindow
	dwTemp.setHarborTemplate(sHTMLTemplate);
	
	//将DW的字段放到模版的泊位(Dock)中
	doTemp.setColumnAttribute(ecrDWX.getColumnAttribute(),"DockOptions","ColSpan=6");
	
	//生成HTMLDataWindow
	Vector vTemp = dwTemp.genHTMLDataWindow("%");
	for(int i=0;i<vTemp.size();i++) out.print((String)vTemp.get(i));
